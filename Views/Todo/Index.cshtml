@{
    ViewData["Title"] = "List of todos";
}
@model List<vidly.Models.TodoModel>;

<h2>Todo List</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Duration</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model)
        {
            <tr>
                <td>@todo.Id</td>
                <td>@todo.Name</td>
                <td>@todo.Duration</td>
                <td>
                    <a asp-controller="Todo" asp-action="Edit" asp-route-id="@todo.Id">
                        Edit
                    </a> |
                    <a asp-controller="Todo" asp-action="Details" asp-route-id="@todo.Id">
                        Details
                    </a> |
                    <a asp-controller="Todo" asp-action="Delete" asp-route-id="@todo.Id">
                        Delete
                    </a>

                </td>
            </tr>
        }
    </tbody>
    @if (@Model.Count() == 0)
    {
        <caption class="text-center mt-5">Currently, No todos</caption>
    }
</table>
